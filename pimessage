            if (address.find('n')):
                if (address.find('e')):
                    if (address.find('t')):
                        ipIndex = address.index('t')
                        exit = 1
    if (exit == 1):
        ipIndex += 7
        print ipIndex

    ipAddress = None # declare


    return address


